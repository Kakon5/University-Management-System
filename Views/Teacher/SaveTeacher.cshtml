@using UniversityManagementSystem.Models
@model UniversityManagementSystem.Models.Teacher
@{
    ViewBag.Title = "Save Teacher";
}

@section styles{
    <style>
    .input-validation-error {
        border: 1px solid red;
    }

    .field-validation-error {
        color: red;
    }

    #teacherForm {
        width: 750px;
        margin-left: 350px;
        margin-top: 150px;
    }
        #message {
            font-weight: bold;
            font-size: 20px;
            color: #6600ff;
        }

        #footer {
            margin-left: 330px;
        }
</style>

}

<div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "teacherForm" }))
    {
        <fieldset>
            <legend>Save Teacher</legend>
            <table>
                <tr>
                    <td>@Html.LabelFor(x => x.Name)</td>
                    <td>@Html.TextBoxFor(x => x.Name)</td>
                    <td>@Html.ValidationMessageFor(x => x.Name)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.Address)</td>
                    <td>@Html.TextAreaFor(x => x.Address)</td>
                    <td>@Html.ValidationMessageFor(x => x.Address)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.Email)</td>
                    <td>@Html.TextBoxFor(x => x.Email)</td>
                    <td>@Html.ValidationMessageFor(x => x.Email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.ContactNo)</td>
                    <td>@Html.TextBoxFor(x => x.ContactNo)</td>
                    <td>@Html.ValidationMessageFor(x => x.ContactNo)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.DepartmentId)</td>
                    <td>
                        @Html.DropDownListFor(x => x.DepartmentId,
                            new SelectList(ViewBag.Departments, "Value", "Text"))
                    </td>
                    <td>@Html.ValidationMessageFor(x => x.DepartmentId)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.DesignationId)</td>
                    <td>
                        @Html.DropDownListFor(x => x.DesignationId,
                        new SelectList(ViewBag.Designations, "Value", "Text"))
                    </td>
                    <td>@Html.ValidationMessageFor(x => x.DesignationId)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.CreditToBeTaken)</td>
                    <td>@Html.TextBoxFor(x => x.CreditToBeTaken)</td>
                    <td>@Html.ValidationMessageFor(x => x.CreditToBeTaken)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Save" id="saveButton" /></td>
                </tr>

            </table><br />
            <p id="message">@ViewBag.Message</p>
        </fieldset>
        <br /><br />

    }
</div>


@section scripts{
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery.validate.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
